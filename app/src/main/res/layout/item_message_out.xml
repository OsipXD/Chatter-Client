<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/space_half_small"
        android:layout_marginStart="@dimen/message_free_space"
        android:layout_marginTop="@dimen/space_half_small"
        android:background="@drawable/chat_bubble_out"
        android:orientation="vertical"
        tools:context=".ui.adapter.MessageOutViewHolder">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/space_small"
            android:paddingStart="@dimen/space_small"
            android:paddingTop="@dimen/space_small"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec commodo neque at massa ornare fringilla vel vel purus. Phasellus tristique congue aliquet." />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawablePadding="@dimen/space_half_small"
            android:maxLength="5"
            android:paddingEnd="@dimen/space_half_small"
            android:paddingStart="@dimen/space_half_small"
            android:textSize="12sp"
            tools:drawableEnd="@drawable/ic_done_black_14dp"
            tools:text="15:42" />

    </LinearLayout>
</FrameLayout>
