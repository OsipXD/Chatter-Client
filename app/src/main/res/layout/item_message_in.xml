<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_half_small"
    android:layout_marginEnd="@dimen/message_free_space"
    android:layout_marginTop="@dimen/space_half_small"
    android:background="@drawable/chat_bubble"
    android:orientation="vertical">

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/space_small"
        android:padding="@dimen/space_small"
        android:textColor="@color/colorPrimaryDark"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:paddingEnd="@dimen/space_half_small"
        android:paddingStart="@dimen/space_small"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec commodo neque at massa ornare fringilla vel vel purus. Phasellus tristique congue aliquet. " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingEnd="@dimen/space_half_small"
        android:paddingStart="@dimen/space_half_small"
        android:textSize="12sp"
        tools:text="15:42" />

</LinearLayout>
